section#carousel
    .slider.carousel
        - let n = 1
        while n < 5
            .item(style="background-image: url('img/Главная/Group%2080.png')" id = 'slickItem' + n)
                .container.text-center
                    .title.mb-5
                        h2="Депрессорно-диспергирующие присадки для дизельного топлива: ангители и концентраты " + n
                    .content.mb-5
                        h3 И другие присадки для дизельного топлива
                    .bottom
                        a.btn.parovoz-btn.btn-blue(href="#") Подробнее
            - n++
    .container.arrows.d-none.d-lg-block
        .slick-arrows

